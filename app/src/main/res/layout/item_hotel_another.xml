<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardHotel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card"
        android:paddingLeft="56dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="@dimen/veg_icon"
                        android:layout_height="@dimen/veg_icon"
                        android:src="@drawable/veg_revised"></ImageView>

                    <ImageView
                        android:layout_width="@dimen/veg_icon"
                        android:layout_height="@dimen/veg_icon"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/nonveg_revised"></ImageView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTagLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tag Line"
                    android:textColor="@color/secondary_text" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <com.alexzh.circleimageview.CircleImageView
        android:id="@+id/iconHotel"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/bg_image_small" />

</RelativeLayout>